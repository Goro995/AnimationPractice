<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/activationButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Let`s go!"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="49dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/topView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingStart="30dp"
        android:gravity="top"
        android:background="@color/blue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="148dp"
        app:layout_constraintTop_toBottomOf="@+id/middleView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="146dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/middleView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:paddingStart="30dp"
        android:gravity="center_vertical"
        android:background="@color/green"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/topView"
        android:layout_marginTop="216dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/topView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:paddingStart="30dp"
        android:gravity="bottom"
        android:background="@color/red"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/middleView"
        android:layout_marginTop="30dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/middleView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>